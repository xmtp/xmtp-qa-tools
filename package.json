{
  "name": "xmtp-qa-tools",
  "version": "0.5.12",
  "private": true,
  "type": "module",
  "workspaces": [
    "agents/bots/*",
    "helpers",
    "workers"
  ],
  "scripts": {
    "agent-versions": "tsx cli/versions.ts",
    "bot": "tsx cli/bot.ts",
    "bot:pm2": "tsx cli/bot.ts --pm2",
    "bot:pm2:logs": "pm2 logs gm-bot --raw --lines 1000",
    "build": "tsc",
    "c": "yarn format && yarn build && yarn lint ",
    "clean": "rimraf .data/ ||: && rimraf logs/ ||  :",
    "debug": "npx @xmtp/cli debug --help",
    "debug-dm": "tsx agents/debug-dm.ts",
    "download-server": "tsx db-backups/download-server.ts",
    "fork": "tsx forks/cli.ts",
    "format": "prettier -w .",
    "gen": "tsx cli/gen.ts",
    "gen:keys": "npx @xmtp/cli keys",
    "inboxes:restart": "yarn gen --installations 2 --env production --count 200 --restart",
    "inboxes:update": "yarn gen --installations 2 --env production",
    "lint": "eslint .",
    "monitor:yarn": "httpstat https://grpc.dev.xmtp.network:443",
    "record": "npx playwright codegen 'https://xmtp.chat/'",
    "regression": "yarn versions && yarn test performance --env dev --sync all --versions 3 --size 10-100 && yarn test bugs",
    "revoke": "npx @xmtp/cli revoke",
    "test": "tsx cli/test.ts",
    "versions": "tsx cli/versions.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@xmtp/agent-sdk-1.1.0": "npm:@xmtp/agent-sdk@1.1.16",
    "@xmtp/agent-sdk-1.2.0": "npm:@xmtp/agent-sdk@1.2.4",
    "@xmtp/agent-sdk-2.2.0": "npm:@xmtp/agent-sdk@2.2.0",
    "@xmtp/cli": "^0.0.4",
    "@xmtp/content-type-markdown": "^1.0.0",
    "@xmtp/content-type-reaction": "^2.0.2",
    "@xmtp/content-type-reply": "^2.0.2",
    "@xmtp/content-type-wallet-send-calls": "^2.0.0",
    "@xmtp/node-bindings-1.4.0": "npm:@xmtp/node-bindings@1.4.0",
    "@xmtp/node-bindings-1.5.0": "npm:@xmtp/node-bindings@1.5.4",
    "@xmtp/node-bindings-1.6.0": "npm:@xmtp/node-bindings@1.6.6",
    "@xmtp/node-bindings-1.7.0": "npm:@xmtp/node-bindings@1.7.0-rc2",
    "@xmtp/node-bindings-1.8.1": "npm:@xmtp/node-bindings@1.8.1",
    "@xmtp/node-bindings-1.9.1": "npm:@xmtp/node-bindings@1.9.1",
    "@xmtp/node-sdk-4.3.0": "npm:@xmtp/node-sdk@4.3.0",
    "@xmtp/node-sdk-4.4.0": "npm:@xmtp/node-sdk@4.4.0",
    "@xmtp/node-sdk-4.5.0": "npm:@xmtp/node-sdk@4.5.0",
    "@xmtp/node-sdk-4.6.0": "npm:@xmtp/node-sdk@4.6.0",
    "@xmtp/node-sdk-5.0.0": "npm:@xmtp/node-sdk@5.3.0",
    "axios": "^1.8.2",
    "datadog-metrics": "^0.12.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "node-fetch": "^3.3.0",
    "pm2": "^5.3.1",
    "rimraf": "^6.0.1",
    "uint8arrays": "^5.1.0",
    "viem": "^2",
    "vitest": "^3.2.4",
    "winston": "^3.17.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "latest",
    "@eslint/compat": "^1.2.6",
    "@eslint/js": "^9.19.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5",
    "@types/node": "^24.10.1",
    "@types/yargs": "^17.0.35",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "playwright-chromium": "latest",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.8",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.22.0"
  },
  "packageManager": "yarn@4.6.0",
  "engines": {
    "node": ">=22"
  }
}
