{
  "name": "xmtp-qa-tools",
  "version": "0.3.40",
  "private": true,
  "type": "module",
  "workspaces": [
    "bots/*",
    "helpers",
    "workers"
  ],
  "scripts": {
    "ansi:clean": "tsx -e \"(async () => { const { cleanAllRawLogs } = await import('./helpers/analyzer.js'); await cleanAllRawLogs(); })();\"",
    "ansi:forks": "tsx -e \"(async () => { const { cleanForksLogs } = await import('./helpers/analyzer.js'); await cleanForksLogs(); })();\"",
    "bot": "tsx cli/bot.ts",
    "build": "tsc",
    "c": "yarn build && yarn lint && yarn format",
    "clean": "rimraf .data/ ||: && rimraf logs/ ||  :",
    "format": "prettier -w .",
    "gen": "tsx inboxes/gen.ts",
    "groups": "tsx cli/groups.ts",
    "inboxes:restart": "yarn gen --installations 2 --count 200 --restart",
    "inboxes:update": "yarn gen --installations 2",
    "installations": "tsx cli/installations.ts",
    "lint": "eslint .",
    "mock": "tsx cli/mock-client.ts",
    "monitor:yarn": "httpstat https://grpc.dev.xmtp.network:443",
    "permissions": "tsx cli/permissions.ts",
    "record": "npx playwright codegen 'https://xmtp.chat/'",
    "regression": "yarn test performance --env dev --sync all --versions 3 --size 10-100 && yarn test bugs",
    "revoke": "tsx cli/revoke.ts",
    "send": "tsx cli/send.ts",
    "test": "tsx cli/test.ts",
    "versions": "tsx version-management/cli-versions.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.54.0",
    "@xmtp/agent-sdk": "^1.1.0",
    "@xmtp/content-type-markdown": "^1.0.0",
    "@xmtp/content-type-reaction": "^2.0.2",
    "@xmtp/content-type-reply": "^2.0.2",
    "@xmtp/content-type-wallet-send-calls": "^2.0.0",
    "@xmtp/node-bindings-1.3.3": "npm:@xmtp/node-bindings@1.3.3",
    "@xmtp/node-bindings-1.3.4": "npm:@xmtp/node-bindings@1.3.4",
    "@xmtp/node-bindings-1.3.5": "npm:@xmtp/node-bindings@1.3.5",
    "@xmtp/node-bindings-1.3.6": "npm:@xmtp/node-bindings@1.3.6",
    "@xmtp/node-bindings-1.4.0": "npm:@xmtp/node-bindings@1.4.0",
    "@xmtp/node-bindings-1.5.2": "npm:@xmtp/node-bindings@1.5.2",
    "@xmtp/node-sdk-3.2.2": "npm:@xmtp/node-sdk@3.2.2",
    "@xmtp/node-sdk-4.0.1": "npm:@xmtp/node-sdk@4.0.1",
    "@xmtp/node-sdk-4.0.2": "npm:@xmtp/node-sdk@4.0.2",
    "@xmtp/node-sdk-4.0.3": "npm:@xmtp/node-sdk@4.0.3",
    "@xmtp/node-sdk-4.1.0": "npm:@xmtp/node-sdk@4.1.0",
    "@xmtp/node-sdk-4.2.0": "npm:@xmtp/node-sdk@4.2.0",
    "axios": "^1.8.2",
    "datadog-metrics": "^0.12.1",
    "dotenv": "^16.5.0",
    "node-fetch": "^3.3.0",
    "rimraf": "^6.0.1",
    "uint8arrays": "^5.1.0",
    "viem": "^2",
    "vitest": "^3.2.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "latest",
    "@eslint/compat": "^1.2.6",
    "@eslint/js": "^9.19.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.0.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "playwright-chromium": "latest",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.8",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.22.0"
  },
  "packageManager": "yarn@4.6.0",
  "engines": {
    "node": ">=20"
  }
}
